
<div class="banner" style="background-image: url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : @list_default_img %>);">
    <h1><%=@list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:'btn btn-danger , color: white' %>
</div>

<div class="container mt-5">
    <% @list.bookmarks.each do |bookmark| %>
    <div style="display:inline-block">
      <div class="card" style="width: 18rem;">
        <%= image_tag bookmark.movie.poster_url, alt: "poster" %>
        <div class="card-body">
          <h3><%= bookmark.movie.title %></h3>
          <%= "⭐️" * bookmark.movie.rating %>(<%= bookmark.movie.rating %>)
          <p class="card-text">comment: <%= bookmark.comment %></p>
          <%= link_to bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?"} do %>
            <i class="fa-regular fa-trash-can"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to see your movie lists", lists_path %>
</div>
